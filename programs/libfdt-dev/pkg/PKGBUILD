pkgname=libfdt-dev
pkgver=git
pkgrel=1
pkgdesc="Flat Device Trees manipulation library "
arch=('i386' 'x86_64' 'aarch64')
url="https://git.kernel.org/cgit/utils/dtc/dtc.git"
license=('GPL')
depends=()
source=("https://git.kernel.org/pub/scm/utils/dtc/dtc.git")
md5sums=('SKIP')

build() {
  cd "$srcdir/dtc"
  make
}

package() {
  cd "$srcdir/dtc"
  make DESTDIR="$pkgdir/" install
}
