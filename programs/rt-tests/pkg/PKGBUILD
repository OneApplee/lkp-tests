pkgname=rt-tests
pkgver=git
pkgrel=0
pkgdesc="Suite of real-time tests - cyclictest, hwlatdetect, pip_stress, pi_stress, pmqtest, ptsematest, rt-migrate-test, sendme, signaltest, sigwaittest, svsematest"
arch=('i386' 'x86_64' 'aarch64')
url="https://git.kernel.org/pub/scm/utils/rt-tests/rt-tests"
license=('GPL')
source=("https://git.kernel.org/pub/scm/utils/rt-tests/rt-tests.git")
md5sums=('SKIP')

build() {
	cd "$srcdir/$pkgname"
	make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir/" install
}

